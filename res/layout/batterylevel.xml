<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="#ff000000">
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="30dip"
		android:layout_marginBottom="8dip"
		android:layout_marginTop="8dip"
		android:layout_centerInParent="true">

		<FrameLayout
			android:id="@+id/leftIcon"
			android:layout_height="30dip"
			android:layout_width="30dip"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip">
			<ImageView
				android:id="@+id/sunIcon"
				android:src="@drawable/sun_icon"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:scaleType="fitXY"
				android:visibility="visible" />
			<ImageView
				android:id="@+id/sunIconOk"
				android:src="@drawable/sun_icon_ok"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:scaleType="fitXY"
				android:visibility="gone" />
		</FrameLayout>
		<FrameLayout
			android:id="@+id/rightIcon"
			android:layout_height="30dip"
			android:layout_width="30dip"
			android:layout_alignParentRight="true"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip">
			<ImageView
				android:id="@+id/chargingIcon"
				android:src="@drawable/charging_icon_ok"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:scaleType="fitXY"
				android:visibility="visible" />
			<ImageView
				android:id="@+id/chargingIconOk"
				android:src="@drawable/charging_icon"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:scaleType="fitXY"
				android:visibility="gone" />
		</FrameLayout>
		<FrameLayout
			android:id="@+id/batteryBar"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_toRightOf="@id/leftIcon"
			android:layout_toLeftOf="@id/rightIcon"
			android:background="#ff448844">
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:weightSum="1.0">
				<ImageView
					android:id="@+id/batteryBarFull"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:background="@drawable/grad_battery_full"
					android:layout_weight=".30" />
				<ImageView
					android:id="@+id/batteryBarEmpty"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:background="@drawable/grad_battery_empty"
					android:visibility="visible"
					android:layout_weight=".70" />
			</LinearLayout>
			<TextView
				android:id="@+id/batteryPercentage"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:text="65%"
				android:layout_gravity="center"
				android:gravity="center" />
			<ImageView
				android:id="@+id/chargingAnimation"
				android:layout_width="8dip"
				android:layout_height="fill_parent"
				android:background="@drawable/grad_battery_charge" />
		</FrameLayout>

	</RelativeLayout>

</RelativeLayout>

